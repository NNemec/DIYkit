#!/bin/bash
# DIYkit package: Numerical arrays in Python

        NAME=numpy
     VERSION=1.4.1
    DISTFILE=${NAME}-${VERSION}.tar.gz
 MASTER_SITE=http://downloads.sourceforge.net/project/numpy/NumPy/${VERSION}
 ARCHIVE_URL=${MASTER_SITE}/${DISTFILE}

. $DIYkit/DIYkit-include.sh

CHECK_AVAILABLE "python -c 'import numpy'"
DEPENDS_ON python

DOWNLOAD_ARCHIVE
UNPACK_ARCHIVE

cd $SRCDIR/$NAME
export LDFLAGS=-shared
export MKL=None
python setup.py build
python setup.py install --prefix $PREFIX
