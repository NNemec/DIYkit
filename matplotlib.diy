# Python plotting library

        NAME=matplotlib
     VERSION=1.0.0
    DISTFILE=${NAME}-${VERSION}.tar.gz
 MASTER_SITE=http://download.sourceforge.net/project/matplotlib/matplotlib/matplotlib-1.0
 ARCHIVE_URL=${MASTER_SITE}/${DISTFILE}
   AVAILABLE="python -c 'import matplotlib'"

. $DIYkit/DIYkit-include.sh

DIYkit depend python
DIYkit depend numpy
DIYkit depend pygtk

DOWNLOAD_ARCHIVE
UNPACK_ARCHIVE

cd $SRCDIR/$NAME
python setup.py build
python setup.py install --prefix $PREFIX
