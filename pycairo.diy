# Python bindings for the CAIRO graphics library
        NAME=pycairo
     VERSION=1.6.4
    DISTFILE=${NAME}-${VERSION}.tar.gz
 MASTER_SITE=http://cairographics.org/releases
 ARCHIVE_URL=${MASTER_SITE}/${DISTFILE}
   AVAILABLE="python -c 'import cairo'"

. $DIYkit/DIYkit-include.sh

DIYkit depend python

DOWNLOAD_ARCHIVE
UNPACK_ARCHIVE

cd $SRCDIR/$NAME
./configure --prefix $PREFIX
make
make install
